<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item  android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#de3d1e" />

            <!-- <stroke android:width="0.001dp" android:color="#d3d3d3" /> -->

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dip" android:topRightRadius="5dip" />
        </shape>
        
        </item>
    <item  android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#c93518" />

            <!-- <stroke android:width="0.001dp" android:color="#d3d3d3" /> -->

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dip" android:topRightRadius="5dip" />
        </shape>
        
    </item>
    <item  android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#de3d1e" />

            <!-- <stroke android:width="0.001dp" android:color="#d3d3d3" /> -->

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dip" android:topRightRadius="5dip" />
        </shape>
     </item>

</selector>